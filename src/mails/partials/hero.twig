<mj-wrapper>
  <mj-hero
    mode="fluid-height"
    background-width="600px"
    background-height="350px"
    background-url="https://cdn.shopify.com/shopifycloud/brochure/assets/home/hero-stock-small-72c1242fc5bbf6cfe135968110e9c52435af1e389c0fd4fe68208d21427e21e0.jpg"
    background-color="{{ style.color.primary }}"
    padding="100px 0px"
  >
    <mj-text
      padding="20px"
      color="{{ style.color.secondary }}"
      align="center"
      font-size="45px"
      line-height="45px"
      font-weight="700"
    >
      {{ data.title }}
    </mj-text>

    <mj-text
      padding-bottom="20px"
      color="{{ style.color.secondary }}"
      align="center"
      font-size="18px"
      line-height="18px"
      font-weight="400"
    >
      twig, mjml, & liquid.
    </mj-text>

    <mj-button
      mj-class="bg-primary"
      href="https://mjml.io/documentation"
      align="center"
    >
      MJML DOCS
    </mj-button>
  </mj-hero>
</mj-wrapper>