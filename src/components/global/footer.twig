{% block footer_outer %}
  <mj-wrapper>
    <mj-section>
      <mj-column css-class="full-width">
        <mj-divider border-color="{{ style.color['black'] }}" padding="72px 0 24px" />
      </mj-column>
    </mj-section>
    <mj-section css-class="padded-small">
      <mj-column>
        {% block footer_lower_text %}
          <mj-text
            color="{{ style.color['grey-dark'] }}"
            font-size="20px"
            line-height="1.5"
          >
            {% block text %}
              {{ text | default('All Fairtrade organic cotton. <br/>All plastic-free.')}}
            {% endblock %}
          </mj-text>
        {% endblock %}
      </mj-column>
      <mj-column>
        {% block footer_lower_affiliates %}
          {% include '@components::local/affiliates.twig' with {
            logos: [
              {
                src: development ? server ~ '/assets/logo1.png' : "https://cdn.shopify.com/s/files/1/0053/6592/files/fairtrade-logo.png?v=1721014098",
                alt: 'Logo 1'
              },
              {
                src: development ? server ~ '/assets/logo2.png' : "https://cdn.shopify.com/s/files/1/0053/6592/files/b-corp-logo.png?v=1721014097",
                alt: 'Logo 2'
              }
            ]
          } %}
        {% endblock %}
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column css-class="full-width">
        <mj-divider border-color="{{ style.color['black'] }}" padding="24px 0 16px" />
      </mj-column>
    </mj-section>
  </mj-wrapper>
{% endblock %}