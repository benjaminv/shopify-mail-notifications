<mj-section padding="{{ padding | default('0 0 20px') }}">
  <mj-column>
    {% block headline_outer %}
      <mj-text
        align="center"
        font-family="{{ style.font.family_alt }}"
        font-size="19px"
        line-height="1.4"
        padding-bottom="20px"
      >
        {% block headline %}
          <div class="headline">{{ headline | default('Headline') }}</div>
        {% endblock %}
      </mj-text>
    {% endblock %}

    {% block text_outer %}
      <mj-text
        align="center"
        font-family="{{ style.font.family_alt }}"
        font-size="14px"
        line-height="1.7"
        color="{{ style.color['grey-dark'] }}"
      >
        {% block text %}{{ text | default('Lorem ipsum dolor sit amet consectetur adipisicing elit. Officia optio delectus asperiores architecto cupiditate perferendis aperiam magni veritatis, nulla corrupti?') }}{% endblock %}
      </mj-text>
    {% endblock %}
  </mj-column>
</mj-section>