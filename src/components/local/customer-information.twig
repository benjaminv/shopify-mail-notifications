{% block shipping_address_outer %}
  {% verbatim %}
    <mj-raw>
      {% if requires_shipping and shipping_address %}
    </mj-raw>
  {% endverbatim %}

    <mj-section padding="{{ padding | default('0 0 24px') }}">
      <mj-column>
          <mj-text
            font-size="14px"
            font-weight="700"
            color="{{ style.color['grey-dark'] }}"
            padding-bottom="5px"
          >
            {% block shipping_address_headline %}
              {{ shipping_address_headline | default('Shipping address') }}
            {% endblock %}
          </mj-text>

          <mj-text
            font-size="14px"
            line-height="1.7"
            color="{{ style.color['grey-dark'] }}"
          >
            {% block shipping_address %}
              {% verbatim %}
                {{ shipping_address | format_address }}
              {% endverbatim %}
            {% endblock %}
          </mj-text>
          <mj-text
            font-size="14px"
            font-weight="700"
            color="{{ style.color['grey-dark'] }}"
            padding-top="15px"
            padding-bottom="5px"
          >
            {% block shipping_method_headline %}
              {{ shipping_method_headline | default('Shipping method') }}
            {% endblock %}
          </mj-text>

          <mj-text
            font-size="14px"
            line-height="1.7"
            color="{{ style.color['grey-dark'] }}"
            padding-bottom="16px"
          >
            {% block shipping_method %}
              {% verbatim %}
                {{ shipping_method.title }}
              {% endverbatim %}
            {% endblock %}
          </mj-text>
      </mj-column>
      <mj-column>
        <mj-text
          font-size="14px"
          font-weight="700"
          color="{{ style.color['grey-dark'] }}"
          padding-bottom="5px"
        >
          {% block billing_address_headline %}
            {{ billing_address_headline | default('Billing address') }}
          {% endblock %}
        </mj-text>

        <mj-text
          font-size="14px"
          line-height="1.7"
          color="{{ style.color['grey-dark'] }}"
        >
          {% block billing_address %}
            {% verbatim %}
              {{ billing_address | format_address }}
            {% endverbatim %}
          {% endblock %}
        </mj-text>
      </mj-column>
    </mj-section>

  {% verbatim %}
    <mj-raw>
      {% endif %}
    </mj-raw>
  {% endverbatim %}
{% endblock %}

{% block billing_address_outer %}
  {% verbatim %}
    <mj-raw>
      {% if billing_address %}
    </mj-raw>
  {% endverbatim %}

  {% verbatim %}
    <mj-raw>
      {% endif %}
    </mj-raw>
  {% endverbatim %}
{% endblock %}